#!/bin/bash
# Script to fetch data for multiple Pokémon and save to separate files

POKEMON_LIST=(bulbasaur ivysaur venusaur charmander charmeleon)
OUTPUT_DIR="pokemon_data"
API_URL="https://pokeapi.co/api/v2/pokemon"

# Create output directory if it doesn't exist
mkdir -p "$OUTPUT_DIR"

for name in "${POKEMON_LIST[@]}"; do
  echo "Fetching data for $name..."
  curl -s -f "$API_URL/$name" -o "$OUTPUT_DIR/$name.json"
  if [ $? -eq 0 ]; then
    echo "Saved data to $OUTPUT_DIR/$name.json ✅"
  else
    echo "Failed to fetch data for $name ❌"
  fi
  sleep 2 # Delay to handle rate limiting

done
