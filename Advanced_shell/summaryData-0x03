#!/bin/bash
# Script to summarize PokÃ©mon data and generate a CSV report

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Write CSV header
printf "Name,Height (m),Weight (kg)\n" > "$OUTPUT_FILE"

# Extract data from each JSON file and append to CSV
for file in "$INPUT_DIR"/*.json; do
  name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
  height=$(jq -r '.height' "$file")
  weight=$(jq -r '.weight' "$file")
  height_m=$(awk "BEGIN { printf \"%.2f\", $height/10 }")
  weight_kg=$(awk "BEGIN { printf \"%.2f\", $weight/10 }")
  printf "%s,%s,%s\n" "$name" "$height_m" "$weight_kg" >> "$OUTPUT_FILE"
done

# Print CSV report location
echo "CSV Report generated at: $OUTPUT_FILE"

# Calculate averages using awk
awk -F',' 'NR>1 {h+=$2; w+=$3; n++} END {if(n>0) printf "\nAverage Height: %.2f m\nAverage Weight: %.2f kg\n", h/n, w/n}' "$OUTPUT_FILE"
